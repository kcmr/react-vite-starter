{
  "name": "react-vite-starter",
  "version": "1.0.0",
  "description": "Starter template for Vite with React (TypeScript), CSS-Modules and Jest with @react/testing-library. Based on Vital (https://github.com/jvidalv/vital)",
  "license": "MIT",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not IE 11"
  ],
  "engines": {
    "node": ">=16",
    "yarn": ">=1.22.5"
  },
  "scripts": {
    "start": "vite",
    "prebuild": "rimraf dist",
    "build": "vite build",
    "test": "jest --coverage",
    "format": "prettier . --write",
    "lint": "eslint . --ignore-path .gitignore --color --no-error-on-unmatched-pattern --max-warnings 0",
    "lint:fix": "eslint . --ignore-path .gitignore --fix --no-error-on-unmatched-pattern"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0"
    ],
    "*.{md,json,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm t"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.4",
    "@types/react": "^17.0.31",
    "@types/react-dom": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "autoprefixer": "^10.3.7",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.3",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4",
    "vite": "^2.6.10",
    "vite-plugin-checker": "^0.3.4",
    "vite-preset-react": "^2.0.0"
  }
}
